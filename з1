class Point
private int x;
private int y;
public int x {get;set;}
public int Y { get; set; }
public Point(int x, int y)
{X = x;
Y = y;}
public static Point operator +(Point p1, Point p2)
{var res1 = p1.X + p2.x;
var res2 = p1.Y + p2.Y;
return new Point(res1, res2);}
