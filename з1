public static Point operator -(Point p1, Point p2)
{
var res1 = p1.x - p2.X;
var res2= p1.Y - p2.Y;
return new Point(res1, res2);
}
public override string ToString()
{Console WriteLine($"(X}, (y]"); return " ";}
